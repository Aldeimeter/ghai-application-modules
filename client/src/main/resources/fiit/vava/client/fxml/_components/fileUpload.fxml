<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" fx:controller="fiit.vava.client.controllers._components.FileUploadController" spacing="10"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-max-width: 400px; -fx-border-color: #a0aec0; -fx-border-width: 1px; -fx-border-radius: 1em; -fx-padding: 0.375em 0.75em;">

    <Label fx:id="labelCoverPhoto" text="Select a file with relative format."
           style="-fx-font-size: 1em; -fx-font-weight: medium; -fx-text-fill: #2d3748;"/>
    <ImageView fx:id="coverPhotoPlaceholder" fitHeight="50" fitWidth="50"
               style="-fx-background-color: #edf2f7;"/>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="uploadButton" onAction="#handleUpload" text="Upload a file"
                style="-fx-background-color: #667eea; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-padding: 0.375em 0.75em;"/>
        <!--
                <Label fx:id="orDragAndDrop" text="or drag and drop"
                       style="-fx-font-size: 0.875em; -fx-text-fill: #718096;"/>
        -->
    </HBox>

    <Label fx:id="fileFormatInfo" text="PNG, JPG up to 10MB"
           style="-fx-font-size: 0.75em; -fx-text-fill: #718096;"/>
</VBox>