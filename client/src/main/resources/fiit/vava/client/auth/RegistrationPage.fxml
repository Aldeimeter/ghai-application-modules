<GridPane alignment="center" hgap="10" maxHeight="400.0" maxWidth="600.0" minHeight="300.0" minWidth="400.0" prefHeight="300.0" prefWidth="400.0" stylesheets="@../css/auth.css" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fiit.vava.client.controllers.RegistrationController">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
    <TextField fx:id="emailField" maxHeight="75.0" maxWidth="500.0" minHeight="25.0" minWidth="350.0" promptText="Enter your email" GridPane.rowIndex="1" />
    <PasswordField fx:id="passwordField" maxHeight="75.0" maxWidth="500.0" minHeight="25.0" minWidth="350.0" promptText="Enter your password" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
    <PasswordField fx:id="confirmPasswordField" maxHeight="75.0" maxWidth="500.0" minHeight="25.0" minWidth="350.0" promptText="Enter your password again" GridPane.rowIndex="4" />
    
    <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="50.0" maxWidth="200.0" minHeight="30.0" minWidth="100.0" text="Sign Up" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.vgrow="ALWAYS">
      <GridPane.margin>
         <Insets />
      </GridPane.margin></Button>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
      <children>
         <Label contentDisplay="CENTER" text="Email" textAlignment="CENTER" HBox.hgrow="ALWAYS">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
      <children>
         <Label contentDisplay="CENTER" text="Password" textAlignment="CENTER" HBox.hgrow="ALWAYS">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
      </children>
   </HBox>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" maxWidth="500.0" minWidth="200.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="50.0" minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints maxHeight="75.0" minHeight="25.0" vgrow="ALWAYS" />
      <RowConstraints maxHeight="50.0" minHeight="25.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints maxHeight="75.0" minHeight="25.0" vgrow="ALWAYS" />
      <RowConstraints maxHeight="75.0" minHeight="25.0" vgrow="ALWAYS" />
      <RowConstraints maxHeight="50.0" minHeight="25.0" vgrow="ALWAYS" />
   </rowConstraints>
